# =================================================================
# Environment Variables Configuration Example
# =================================================================
# Copy this file to .env and update with your actual values
# Never commit .env file to version control
# =================================================================

# =================================================================
# ASPNET CORE ENVIRONMENT
# =================================================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7001;http://localhost:5000

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# Connection string for the main database
# Environment variable format: ConnectionStrings__DefaultConnection
ConnectionStrings__DefaultConnection="Server=(localdb)\\mssqllocaldb;Database=DotNetCoreAPITemplateDb;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"

# For Docker/Production, use a format like:
# ConnectionStrings__DefaultConnection="Server=db-server;Database=DotNetCoreAPITemplateDb;User Id=sa;Password=YourStrong@Password;TrustServerCertificate=true"

# =================================================================
# API SETTINGS
# =================================================================
ApiSettings__Title="DotNet Core API Template"
ApiSettings__Version="v1"
ApiSettings__Description="A comprehensive .NET Core Web API template"
ApiSettings__Contact__Name="API Support"
ApiSettings__Contact__Email="support@yourcompany.com"
ApiSettings__Contact__Url="https://yourcompany.com"

# =================================================================
# CORS SETTINGS
# =================================================================
CorsSettings__AllowedOrigins__0="https://localhost:3000"
CorsSettings__AllowedOrigins__1="https://yourfrontend.com"
CorsSettings__AllowCredentials=true

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__Microsoft.EntityFrameworkCore=Warning

# =================================================================
# HEALTH CHECKS
# =================================================================
HealthChecks__Enabled=true
HealthChecks__DatabaseCheckEnabled=true
HealthChecks__TimeoutSeconds=30

# =================================================================
# SERILOG CONFIGURATION (Optional)
# =================================================================
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning

# =================================================================
# EXTERNAL SERVICES (Examples)
# =================================================================
# ExternalApi__BaseUrl="https://api.example.com"
# ExternalApi__ApiKey="your-api-key"
# Redis__ConnectionString="localhost:6379"
# Email__SmtpServer="smtp.example.com"
# Email__SmtpPort=587
# Email__Username="your-email@example.com"
# Email__Password="your-password"

# =================================================================
# SECURITY SETTINGS (Examples)
# =================================================================
# JwtSettings__SecretKey="your-super-secret-key-here-at-least-256-bits"
# JwtSettings__Issuer="https://yourapi.com"
# JwtSettings__Audience="https://yourapi.com"
# JwtSettings__ExpirationMinutes=60

# =================================================================
# DOCKER SPECIFIC (when running in containers)
# =================================================================
# DB_HOST=sqlserver
# DB_NAME=DotNetCoreAPITemplateDb
# DB_USER=sa
# DB_PASSWORD=YourStrong@Password